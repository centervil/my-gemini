{
  "general": {
    "previewFeatures": true,
    "enableAutoUpdate": true,
    "enablePromptCompletion": false,
    "retryFetchErrors": true
  },
  "experimental": {
    "skills": true,
    "codebaseInvestigatorSettings": {
      "enabled": true,
      "maxNumTurns": 15
    }
  },
  "ui": {
    "showStatusInTitle": true,
    "dynamicWindowTitle": true,
    "showMemoryUsage": true,
    "useAlternateBuffer": false,
    "incrementalRendering": false
  },
  "contextFileName": [
    "AGENTS.md",
    "GEMINI.md"
  ],
  "mcpServers": {
    "chrome-devtools": {
      "command": "npx",
      "args": [
        "chrome-devtools-mcp@latest"
      ]
    },
    "nx-mcp": {
      "command": "npx",
      "args": [
        "nx",
        "mcp"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp"
      ]
    }
  },
  "model": {
    "compressionThreshold": 0.5,
    "maxSessionTurns": 1000,
    "summarizeToolOutput": {
      "run_shell_command": {
        "tokenBudget": 2000
      }
    }
  },
  "security": {
    "disableYoloMode": false
  },
  "allowedTools": [
    "ls",
    "grep",
    "cat",
    "find",
    "pwd",
    "git status",
    "git log",
    "git diff"
  ],
  "fileFiltering": {
    "respectGitIgnore": true,
    "disableFuzzySearch": false
  },
  "agents": {
    "overrides": {
      "codebase_investigator": {
        "enabled": true,
        "runConfig": {
          "maxTurns": 15
        }
      }
    }
  }
}